% form_for ~create:Route.Product_controller.Create.path ~edit:(lazy (Route.Product_controller.Update.path ~id:(id_of_string env#product#id#v))) env#product buf begin fun f m ->

  % if m#all_errors <> "" then begin
    <p>Errors: <%= m#all_errors %></p>
  % end else ();

  % f#input m#title;
  % f#input m#description ~textarea:(`Rows 10);
  % f#input m#image_url;
  % f#input m#price;

  % f#submit "Submit";

% end;
